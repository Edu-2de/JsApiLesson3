        {
          "name": "Admin - Add Balance to User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 2,\n  \"amount\": 10000.00,\n  \"description\": \"Saldo inicial\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/transactions/add-balance",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["transactions", "add-balance"]
            }
          }
        },
        {
          "name": "Admin - Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/users/3",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["users", "3"]
            }
          }
        }
      ]
